---
import Features from '../components/Features.astro'
import Footer from '../components/Footer.astro'
import Gallery from '../components/Gallery.astro'
import Header from '../components/Header.astro'
import Homes from '../components/Homes.astro'
import Realtors from '../components/Realtors.astro'
import Sidebar from '../components/Sidebar.astro'
import StoryContent from '../components/StoryContent.astro'
import StoryPictures from '../components/StoryPictures.astro'

import '../sass/main.scss'
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />

    <link
      href='https://fonts.googleapis.com/css?family=Josefin+Sans:300,400,400i|Nunito:300,300i'
      rel='stylesheet'
    />
    <link rel='shortcut icon' type='image/png' href='favicon.png' />

    <title>nexter &mdash; your home, your freedom</title>
  </head>

  <body class='container'>
    <Sidebar />

    <Header />

    <Realtors />

    <Features />

    <StoryPictures />

    <StoryContent />

    <Homes />

    <Gallery />

    <Footer />
  </body>
</html>
